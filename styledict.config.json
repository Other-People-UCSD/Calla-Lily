{
  "source": ["stories/tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "./stories/",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables"
      }]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "./stories/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "./stories/",
      "files": [{
        "destination": "_variables.js",
        "format": "javascript/es6"
      }]
    }
  }
}