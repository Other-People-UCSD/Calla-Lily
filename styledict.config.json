{
  "source": ["stories/tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "../",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "./stories/",
      "files": [{
        "destination": "_variables.js",
        "format": "javascript/es6"
      }]
    }
  }
}